/* pages/movie/movie.wxss */
#app-movie .movie-swiper image{
  width: 100%;
}
#app-movie .movie{
  display: flex;
  flex-direction: row;
}
#app-movie .movie .pic image{
  width: 100px;
  height:150px;
}
#app-movie .movie .movie-info{
  padding-left: 20px;
}
#app-movie .movie .movie-info .base-info{
  color: #fff;
  font-size: 12px;
  padding-top: 20px;
  line-height: 20px;
}
#app-movie .hr{
  height: 2px;
  width: 100%;
  background-color: #000;
  border-top: 1px solid #fff;
  border-bottom: 1px solid #fff;
  opacity: 0.2;
}