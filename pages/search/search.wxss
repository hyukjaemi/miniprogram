/* pages/search/search.wxss */
@import '../movie/movie.wxss';
.search{
  display: flex;
  flex-direction: row;
  padding:30rpx 0 30rpx 30rpx;
  font-size: 14px;
}
.search button{
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10px;
  border-left: 0px;
  background-color: rgba(79, 190, 254, 0.849);
  color: #fff;
  text-shadow: #000 0 1px 0;
}
.search .input{
  width: 60%;
  border:1px solid #ccc;
  box-shadow: inset 0 0 10px #ccc;
  color: #000;
  background-color: #fff;
}
.btnClick{
  opacity: 0.7
}